<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<title>Apex Rockets!</title>
		<%= csrf_meta_tags %>
    	<%= csp_meta_tag %>

    	
    	
		<meta name="description" content="" />
		<meta name="Author" content="Dorin Grigoras [www.stepofweb.com]" />
		<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    	<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>


		<!-- mobile settings -->
		<meta name="viewport" content="width=device-width, maximum-scale=1, initial-scale=1, user-scalable=0" />
		<!--[if IE]><meta http-equiv='X-UA-Compatible' content='IE=edge,chrome=1'><![endif]-->

		<!-- WEB FONTS : use %7C instead of | (pipe) -->
		<link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600%7CRaleway:300,400,500,600,700%7CLato:300,400,400italic,600,700" rel="stylesheet" type="text/css" />

		<!-- CORE CSS -->
		<%= stylesheet_link_tag 'bootstrap.min', media: 'all', 'data-turbolinks-track': 'reload' %>

		<!-- REVOLUTION SLIDER -->
		<%= stylesheet_link_tag 'extralayers', media: 'all', 'data-turbolinks-track': 'reload' %>
		<%= stylesheet_link_tag 'settings', media: 'all', 'data-turbolinks-track': 'reload' %>

		<!-- THEME CSS -->
		<%= stylesheet_link_tag 'essentials', media: 'all', 'data-turbolinks-track': 'reload' %>
		<%= stylesheet_link_tag 'layout', media: 'all', 'data-turbolinks-track': 'reload' %>

		<!-- PAGE LEVEL SCRIPTS -->
		<%= stylesheet_link_tag 'header-1', media: 'all', 'data-turbolinks-track': 'reload' %>
		<%= stylesheet_link_tag 'blue', media: 'all', 'data-turbolinks-track': 'reload' %>

		<link rel="apple-touch-icon" sizes="152x152" href="assets/images/favicon/apple-touch-icon.png">
		<link rel="icon" type="image/png" sizes="32x32" href="assets/images/favicon/favicon-32x32.png">
		<link rel="icon" type="image/png" sizes="16x16" href="assets/images/favicon/favicon-16x16.png">
		<link rel="manifest" href="assets/images/favicon/site.webmanifest">
		<link rel="mask-icon" href="assets/images/favicon/safari-pinned-tab.svg" color="#5bbad5">
		<link rel="shortcut icon" href="assets/images/favicon/favicon.ico">
		<meta name="msapplication-TileColor" content="#da532c">
		<meta name="msapplication-config" content="assets/images/favicon/browserconfig.xml">
		<meta name="theme-color" content="#ffffff">

	</head>

	<!--
		AVAILABLE BODY CLASSES:
		
		smoothscroll 			= create a browser smooth scroll
		enable-animation		= enable WOW animations

		bg-grey					= grey background
		grain-grey				= grey grain background
		grain-blue				= blue grain background
		grain-green				= green grain background
		grain-blue				= blue grain background
		grain-orange			= orange grain background
		grain-yellow			= yellow grain background
		
		boxed 					= boxed layout
		pattern1 ... patern11	= pattern background
		menu-vertical-hide		= hidden, open on click
		
		BACKGROUND IMAGE [together with .boxed class]
		data-background="assets/images/_smarty/boxed_background/1.jpg"
	-->
	<body class="smoothscroll enable-animation">


		
		


		<!-- wrapper -->
		<div id="wrapper">

			<%= render partial: 'layouts/header' %>
			
				<% if notice %>
  					<p class="alert alert-success"><%= notice %></p>
				<% end %>
				<% if alert %>
  					<p class="alert alert-danger"><%= alert %></p>
				<% end %>

				<%= yield %>


			<%= render partial: 'layouts/footer' %>

			
		</div>
		<!-- /wrapper -->


		<!-- SCROLL TO TOP -->
		<a href="#top" id="toTop"></a>


		<!-- PRELOADER -->
		<div id="preloader">
			<div class="inner">
				<span class="loader"></span>
			</div>
		</div><!-- /PRELOADER -->

		<!-- jquery -->
		<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>


		<!-- JAVASCRIPT FILES -->
		<script>var plugin_path = '../assets/';</script>
		<%= javascript_include_tag 'jquery-3.3.1.min' %>

		<%= javascript_include_tag 'smoothscroll.js' %>
		<%= javascript_include_tag 'owl.carousel.min.js' %>
		
		<%= javascript_include_tag 'scripts' %>
		

		<!-- REVOLUTION SLIDER -->
		<%= javascript_include_tag 'jquery.themepunch.tools.min' %>
		<%= javascript_include_tag 'jquery.themepunch.revolution.min' %>
		<%= javascript_include_tag 'demo.revolution_slider' %>
		

		<!-- PAGELEVEL SCRIPTS -->
		<%= javascript_include_tag 'contact', 'data-turbolinks-track': 'reload' %>
		<%= javascript_include_tag 'FormScript', 'data-turbolinks-track': 'reload' %>


	</body>
</html>
