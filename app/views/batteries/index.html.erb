<p id="notice"><%= notice %></p>

<h1>Batteries</h1>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Status</th>
      <th>Employeeid</th>
      <th>Operation certificate</th>
      <th>Information</th>
      <th>Notes</th>
      <th>Informations date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @batteries.each do |battery| %>
      <tr>
        <td><%= battery.Type %></td>
        <td><%= battery.Status %></td>
        <td><%= battery.EmployeeId %></td>
        <td><%= battery.Operation_Certificate %></td>
        <td><%= battery.Information %></td>
        <td><%= battery.Notes %></td>
        <td><%= battery.Informations_Date %></td>
        <td><%= link_to 'Show', battery %></td>
        <td><%= link_to 'Edit', edit_battery_path(battery) %></td>
        <td><%= link_to 'Destroy', battery, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

