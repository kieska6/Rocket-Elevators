
  
  <p id="notice"><%= notice %></p>
  <body class="text-center smoothscroll enable-animation">

  <h1 class= "display-5 fw-bold text-center">Leads</h1>

  <table class= " table table-warning table-striped ">
    <thead class="container">
      <tr>
        <th>Full name contact</th>
        <th>Company name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Project name</th>
        <th>Project description</th>
        <th>Department</th>
        <th>Message</th>
        <th>Attached File</th>
        <th>Request Date</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @leads.each do |lead| %>
        <tr>
          <td><%= lead.full_name_contact %></td>
          <td><%= lead.company_name %></td>
          <td><%= lead.email %></td>
          <td><%= lead.phone %></td>
          <td><%= lead.project_name %></td>
          <td><%= lead.project_description %></td>
          <td><%= lead.department %></td>
          <td><%= lead.message %></td>
          <td><%= lead.file %></td>
          <td><%= lead.request_date %></td> 
          <td><%= link_to 'Show', lead,class:"btn btn-secondary" %></td>
          <!-- <td><%= link_to 'Edit', edit_lead_path(lead),class:"btn btn-primary" %></td> -->
          <td><%= link_to 'Destroy', lead,class:"btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <div class="text-center">
    <%= link_to 'New Lead', root_path(:anchor => "contact"), class:"btn btn-secondary" %> 
  </div>
