<p id="notice"><%= notice %></p>

<h1 class="display-5 fw-bold text-center">Quotes List</h1>

<table class= "container table table-primary table-striped ">
  <thead>
    <tr>
      <th>Building Type</th>
      <th>Amount of elevator</th>
      <th>Price per elevator</th>
      <th>Total price of elevator</th>
      <th>Installation</th>
      <th>Total price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quotes.each do |quote| %>
      <% if quote.user == current_user%>
      <tr>
        <td><%= quote.building_type %></td>
        <td><%= quote.amount_of_elevator %></td>
        <td><%= quote.price_per_elevator %></td>
        <td><%= quote.total_price_of_elevator %></td>
        <td><%= quote.installation %></td>
        <td><%= quote.total_price %></td>
        <td><%= link_to 'Show', quote,class:"btn btn-default" %></td>
        <td><%= link_to 'Edit', edit_quote_path(quote),class:"btn btn-primary" %></td>
        <td><%= link_to 'Destroy', quote,class:"btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>

<br>
<div class="text-center">
<%= link_to 'New Quote', new_quote_path ,class:"text-center btn btn-primary"%>
</div>
