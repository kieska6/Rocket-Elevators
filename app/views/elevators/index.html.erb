<p id="notice"><%= notice %></p>

<body class="text-center smoothscroll enable-animation">

<h1 class="display-5 fw-bold text-center">Elevators</h1>

<table class= "container table table-primary table-striped">
  <thead>
    <tr>
      <th>Column id</th>
      <th>Serial number</th>
      <th>Model</th>
      <th>Type of building</th>
      <th>Status</th>
      <th>Date of commissioning</th>
      <th>Date of last inspection</th>
      <th>Certificate of inspection</th>
      <th>Information</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @elevators.each do |elevator| %>
      <tr>
        <td><%= elevator.column_id %></td>
        <td><%= elevator.serial_number %></td>
        <td><%= elevator.model %></td>
        <td><%= elevator.type_of_building %></td>
        <td><%= elevator.status %></td>
        <td><%= elevator.date_of_commissioning %></td>
        <td><%= elevator.date_of_last_inspection %></td>
        <td><%= elevator.certificate_of_inspection %></td>
        <td><%= elevator.information %></td>
        <td><%= elevator.notes %></td>
        <td><%= link_to 'Show', elevator,class:"btn btn-secondary text-light" %></td>
        <td><%= link_to 'Edit', edit_elevator_path(elevator),class:"btn btn-primary text-light" %></td>
        <td><%= link_to 'Destroy', elevator,class:"btn btn-danger text-light", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="text-center">
<%= link_to 'New Elevator', new_elevator_path, class:"text-center btn btn-primary text-light" %>
</div>
