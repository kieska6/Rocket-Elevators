<p id="notice"><%= notice %></p>
<body class="text-center smoothscroll enable-animation">

<h1 class= "display-5 fw-bold text-center">Addresses</h1>

<table class= "container table table-success table-striped ">
  <thead>
    <tr>
      <th>Type of address</th>
      <th>Status</th>
      <th>Entity</th>
      <th>Number and street</th>
      <th>Suite or appartment</th>
      <th>City</th>
      <th>Postal code</th>
      <th>Country</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.type_of_address %></td>
        <td><%= address.status %></td>
        <td><%= address.entity %></td>
        <td><%= address.number_and_street %></td>
        <td><%= address.suite_or_appartment %></td>
        <td><%= address.city %></td>
        <td><%= address.postal_code %></td>
        <td><%= address.country %></td>
        <td><%= address.notes %></td>
        <td><%= link_to 'Show', address,class:"btn btn-secondary" %></td>
        <td><%= link_to 'Edit', edit_address_path(address),class:"btn btn-primary" %></td>
        <td><%= link_to 'Destroy', address,class:"btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="text-center">
  <%= link_to 'New Address', new_address_path, class:"btn btn-secondary" %>
</div>
