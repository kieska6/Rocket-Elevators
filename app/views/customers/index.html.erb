<h1>Customers</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Customer creation date</th>
      <th>Company name</th>
      <th>Company headquarter</th>
      <th>Company contact</th>
      <th>Company email</th>
      <th>Company description</th>
      <th>Service technical authority name</th>
      <th>Technical authority phone</th>
      <th>Service technical authority email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.user_id %></td>
        <td><%= customer.customer_creation_date %></td>
        <td><%= customer.company_name %></td>
        <td><%= customer.company_headquarter %></td>
        <td><%= customer.company_contact %></td>
        <td><%= customer.company_email %></td>
        <td><%= customer.company_description %></td>
        <td><%= customer.service_technical_authority_name %></td>
        <td><%= customer.technical_authority_phone %></td>
        <td><%= customer.service_technical_authority_email %></td>
        <td><%= link_to 'Show', customer %></td>
        <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
        <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

